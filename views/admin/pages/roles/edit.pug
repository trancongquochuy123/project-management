extends ../../layout/default.pug
include ../../mixins/alert.pug

block main
    h1 Edit Role
    +alert-success(5000)
    +alert-error(5000)

    form(
        action=`${prefixAdmin}/roles/edit/${record._id}?_method=PATCH`
        method="POST"
        class="form"
    )
        .mb-3
            label.form-label(for="title") Tên nhóm quyền
            input.form-control(
                type="text",
                name="title",
                id="title",
                value=record.title || ''
            )
        .mb-3
            label.form-label(for="description") Mô tả ngắn
            textarea.form-control(name="description" id="description") #{record.description || ''}
        button.btn.btn-primary(type="submit") Cập nhật
        a.btn.btn-secondary(href=`${prefixAdmin}/roles`) Quay lại
